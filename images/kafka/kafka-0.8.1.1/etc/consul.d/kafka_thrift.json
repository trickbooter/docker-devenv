{
    "service": {
        "name": "kafka",
        "port": 9092,
        "tags" : ["v0.8.1.1", "Thrift"],
        "check": {
	    "id":"kafka_thrift",
            "name": "Kafka Thrift nc",
            "notes": "Connect to the port internally every 10 seconds",
            "script": "nc -z -v localhost 9092 2>&1",
            "interval": "10s"
        }
    }
}
